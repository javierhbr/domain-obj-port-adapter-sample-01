{
  "name": "aws-lambda-vanilla",
  "version": "1.0.0",
  "description": "Vanilla AWS Lambda implementation",
  "main": "dist/handlers.js",
  "scripts": {
    "build": "pnpm clean && pnpm build:bundle && pnpm copy-templates",
    "build:bundle": "esbuild src/handlers.ts --bundle --outfile=dist/handlers.js --platform=node --target=node18 --format=cjs --external:aws-sdk",
    "clean": "rm -rf dist",
    "copy-templates": "cp template.yaml dist/",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.136",
    "core-domain": "workspace:*",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "esbuild": "^0.25.2",
    "eslint": "^8.57.0",
    "express": "^4.19.2",
    "typescript": "^5.3.3"
  }
}
