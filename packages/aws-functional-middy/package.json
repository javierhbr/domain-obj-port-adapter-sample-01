{
  "name": "aws-functional-middy",
  "version": "1.0.0",
  "description": "Functional JavaScript implementation with Middy middleware",
  "main": "dist/handlers.js",
  "type": "commonjs",
  "scripts": {
    "build": "pnpm clean && pnpm build:bundle && pnpm copy-templates",
    "build:bundle": "pnpm exec esbuild src/handlers.js --bundle --outfile=dist/handlers.js --platform=node --target=node18 --format=cjs --external:aws-sdk",
    "clean": "rm -rf dist",
    "copy-templates": "cp template.yaml dist/",
    "lint": "eslint . --ext .js",
    "start": "node -r src/server.js",
    "dev": "node --watch src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@middy/core": "^5.3.2",
    "@middy/http-error-handler": "^5.3.2",
    "@middy/http-json-body-parser": "^5.3.2",
    "@middy/validator": "^5.3.2",
    "@types/aws-lambda": "^8.10.136",
    "core-domain": "workspace:*",
    "http-errors": "^2.0.0",
    "uuid": "^9.0.1",
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "esbuild": "^0.25.2",
    "express": "^4.19.2",
    "pino-pretty": "^10.3.1"
  },
  "engines": {
    "node": ">=18"
  }
}
