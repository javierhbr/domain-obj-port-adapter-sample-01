{
  "name": "functional-fastify",
  "version": "1.0.0",
  "description": "Functional Fastify implementation with core-domain",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "scripts/build.sh",
    "build:only": "pnpm clean && pnpm build:bundle && pnpm copy-templates",
    "build:bundle": "pnpm exec esbuild src/index.js --bundle --outfile=dist/index.js --platform=node --target=node18 --format=cjs --external:aws-sdk",
    "clean": "rm -rf dist",
    "copy-templates": "cp template.yaml dist/",
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "lint": "eslint . --ext .js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@fastify/aws-lambda": "^3.5.0",
    "fastify": "^4.26.0",
    "fastify-plugin": "^4.5.1",
    "core-domain": "workspace:*",
    "uuid": "^9.0.1",
    "ajv": "^8.12.0",
    "http-errors": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "esbuild": "^0.25.2",
    "pino-pretty": "^10.3.1"
  },
  "engines": {
    "node": ">=18"
  }
}
